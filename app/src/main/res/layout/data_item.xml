<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_time"
        app:layout_constraintStart_toStartOf="parent"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/id_name"
        android:text="我只是描述"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/id_time"
        app:layout_constraintEnd_toStartOf="@+id/id_delete"
        app:layout_constraintBaseline_toBaselineOf="@+id/id_name"
        android:text="2020-04-04 09:09:20"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/id_name"
        android:layout_marginTop="5dp"
        android:id="@+id/id_content"
        app:layout_constraintEnd_toStartOf="@+id/id_delete"
        app:layout_constraintStart_toStartOf="parent"
        android:text="我就显示最我就显示最长一行吧我就显示最长一行吧我就显示最长一行吧我就显示最长一行吧我就显示最长一行吧我就显示最长一行吧我就显示最长一行吧长一行吧"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:id="@+id/id_delete"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>